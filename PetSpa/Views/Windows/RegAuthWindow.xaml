<Window x:Class="PetSpa.Views.Windows.RegAuthWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PetSpa.Views.Windows"
        mc:Ignorable="d"
        Title="RegAuthWindow" Height="720" Width="1080" 
        WindowStartupLocation="CenterScreen" SizeToContent="Height">
    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="120"/>
            <RowDefinition Height="600"/>
        </Grid.RowDefinitions>

        <Image Source="/Resources/Images/BackgroundStart.png" Grid.RowSpan="2" Stretch="Fill"/>
        
        <Frame Grid.Row="0"
               Name="FramePanel"
               NavigationUIVisibility="Hidden"/>

        <Frame Grid.Row="1"
               Name="FrameBody"
               NavigationUIVisibility="Hidden"/>
    </Grid>
</Window>
