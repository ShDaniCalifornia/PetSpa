<Window x:Class="PetSpa.Views.Windows.AddPetWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PetSpa.Views.Windows"
        mc:Ignorable="d"
        Title="AddPetWindow" Height="600" Width="1080">
    
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="20"/>
            <ColumnDefinition Width="110"/>
            <ColumnDefinition Width="370"/>
            <ColumnDefinition Width="80"/>
            <ColumnDefinition Width="370"/>
            <ColumnDefinition Width="110"/>
            <ColumnDefinition Width="20"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="65"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="64"/>
            <RowDefinition Height="64"/>
            <RowDefinition Height="64"/>
            <RowDefinition Height="64"/>
            <RowDefinition Height="64"/>
            <RowDefinition Height="64"/>
            <RowDefinition Height="64"/>
        </Grid.RowDefinitions>


        <!-- Питомец -->
        <TextBlock Grid.Column="1" Grid.ColumnSpan="3" Grid.Row="1" 
                   Text="Питомцы" 
                   HorizontalAlignment="Center"
                   Foreground="Black" FontSize="30"
                   Style="{StaticResource BaseTextBlockStyle}"/>

        <!-- Комбобокс для выбора питомца -->
        <Border Grid.Column="2" Grid.Row="3"
                CornerRadius="10"
                Background="White"
                BorderBrush="#66FFFFFF"
                BorderThickness="2"
                Width="340" Height="40"
                HorizontalAlignment="Left">
            <ComboBox Name="PetsComboBox"
                      FontSize="14"
                      Foreground="#DF6C2D"
                      SelectionChanged="PetsComboBox_SelectionChanged"
                      Background="Transparent"
                      BorderThickness="0"
                      VerticalContentAlignment="Center">
                <ComboBox.ItemContainerStyle>
                    <Style TargetType="ComboBoxItem">
                        <Setter Property="Foreground" Value="#DF6C2D"/>
                        <Setter Property="FontSize" Value="14"/>
                        <Setter Property="Padding" Value="10,5"/>
                    </Style>
                </ComboBox.ItemContainerStyle>
            </ComboBox>
        </Border>

        <!-- Кнопка для добавления питомца рядом с ComboBox -->
        <Button Name="AddPetBtn" Click="AddPetBtn_Click"
                Grid.Column="3" Grid.Row="3"
                Width="40" Height="40"
                Style="{StaticResource TransparentButtonStyle}"
                ToolTip="Добавить питомца">
            <Image Source="/Resources/Icons/PlusIcon.png" Stretch="Uniform"/>
        </Button>

        <!-- Имя питомца -->
        <Border Grid.Column="1" Grid.ColumnSpan="3" Grid.Row="4"
                CornerRadius="10"
                Background="White"
                BorderBrush="#66FFFFFF"
                BorderThickness="2"
                Width="450" Height="40"
                HorizontalAlignment="Center">
            <TextBox Name="PetName3Tb"
                     Text="Имя питомца"
                     FontSize="14"
                     Height="30"
                     VerticalAlignment="Center"
                     Foreground="#DF6C2D"
                     Style="{StaticResource BorderedTextBoxStyle}">
            </TextBox>
        </Border>

        <!-- Вес питомца -->
        <Border Grid.Column="1" Grid.ColumnSpan="3" Grid.Row="5"
                CornerRadius="10"
                Background="White"
                BorderBrush="#66FFFFFF"
                BorderThickness="2"
                Width="450" Height="40"
                HorizontalAlignment="Center">
            <TextBox Name="Weight2Tb"
                     Text="Вес"
                     FontSize="14"
                     Height="30"
                     VerticalAlignment="Center"
                     Foreground="#DF6C2D"
                     Style="{StaticResource BorderedTextBoxStyle}">
            </TextBox>
        </Border>

        <!-- Дата рождения питомца -->
        <Border Grid.Column="1" Grid.ColumnSpan="3" Grid.Row="6"
                CornerRadius="10"
                Background="White"
                BorderBrush="#66FFFFFF"
                BorderThickness="2"
                Width="450" Height="40"
                HorizontalAlignment="Center">
            <TextBox Name="PetBirthday2Tb"
                     Text="Дата рождения"
                     FontSize="14"
                     Height="30"
                     VerticalAlignment="Center"
                     Foreground="#DF6C2D"
                     Style="{StaticResource BorderedTextBoxStyle}">
            </TextBox>
        </Border>

        <!-- Порода питомца -->
        <Border Grid.Column="1" Grid.ColumnSpan="3" Grid.Row="7"
                CornerRadius="10"
                Background="White"
                BorderBrush="#66FFFFFF"
                BorderThickness="2"
                Width="450" Height="40"
                HorizontalAlignment="Center">
            <TextBox Name="PetBreed2Tb"
                     Text="Порода"
                     FontSize="14"
                     Height="30"
                     VerticalAlignment="Center"
                     Foreground="#DF6C2D"
                     Style="{StaticResource BorderedTextBoxStyle}">
            </TextBox>
        </Border>

        <!-- Кнопка удалить -->
        <Button Name="DeleteBtn" 
                Grid.Column="3" Grid.Row="8"
                Width="60" Height="60"
                Style="{StaticResource TransparentButtonStyle}"
                Click="DeleteBtn_Click"
                ToolTip="Удалить питомца"
                HorizontalAlignment="Center"
                VerticalAlignment="Center">
            <Image Source="/Resources/Icons/TrashIcon.png" Stretch="Uniform"/>
        </Button>

        <!-- Сохранить -->
        <Button Name="SaveBtn" Click="SaveBtn_Click" 
                Content="Сохранить" 
                Grid.Row="5" Grid.Column="4" Grid.ColumnSpan="2"
                Style="{StaticResource OrangeWhiteButtonStyle}"
                Width="350" Height="50" 
                Margin="0"
                FontSize="16"
                FontWeight="Bold"/>

        <!-- Отменить -->
        <Button Name="CancelBtn" Click="CancelBtn_Click"
                Content="Отменить" 
                Grid.Row="6" Grid.Column="4" Grid.ColumnSpan="2"
                Style="{StaticResource BeigeGrayButtonStyle}"
                Width="350" Height="50" 

                FontSize="16"/>
    </Grid>
</Window>
