<Window x:Class="PetSpa.Views.Windows.ProfileWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PetSpa.Views.Windows"
        mc:Ignorable="d"
        Height="400" Width="280"
        WindowStyle="None"
        AllowsTransparency="True" Background="Transparent"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">

    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="300"/>
            <RowDefinition Height="100"/>
        </Grid.RowDefinitions>

        <!-- Контейнер с закругленными верхними углами -->
        <Border Grid.Row="0" Grid.RowSpan="2"
                CornerRadius="30,30,0,0"
                ClipToBounds="True">

            <!-- Внутренний контейнер для фото -->
            <Grid>
                <!-- Фото с закругленными углами -->
                <Border CornerRadius="35"
                        BorderThickness="2">
                    <!-- Обрезка -->
                    <Border.Clip>
                        <RectangleGeometry RadiusX="30" RadiusY="30">
                            <RectangleGeometry.Rect>
                                <Rect Width="280" Height="350"/>
                            </RectangleGeometry.Rect>
                        </RectangleGeometry>
                    </Border.Clip>

                    <Image Source="/Resources/Images/adminPhoto.png" 
                           Stretch="UniformToFill"/>
                </Border>
            </Grid>
        </Border>

        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="25"/>
                <RowDefinition Height="25"/>
                <RowDefinition Height="25"/>
                <RowDefinition Height="25"/>
            </Grid.RowDefinitions>

            <Border Background="#DF6C2D" Grid.RowSpan="4"
                    VerticalAlignment="Bottom"
                    CornerRadius="40"
                    Margin="0 0 0 0">

                <StackPanel Margin="15,10"
                        VerticalAlignment="Center">

                    <!-- Имя и Фамилия -->
                    <TextBlock Text="{Binding FullName}"
                           FontWeight="Bold" 
                           FontSize="16" 
                           Foreground="White" 
                           TextWrapping="Wrap"
                           HorizontalAlignment="Center"
                           TextAlignment="Center"
                           Margin="0,0,0,5"/>

                    <!-- Должность -->
                    <TextBlock Text="{Binding RoleName}"
                           FontSize="14"
                           FontWeight="SemiBold"
                           Foreground="#FFF0E6"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,8"/>

                    <!-- Телефон -->
                    <StackPanel Orientation="Horizontal"
                            HorizontalAlignment="Center"
                            Margin="0,0,0,5">
                        <TextBlock Text="{Binding Phone}"
                               FontSize="10"
                               Foreground="White"/>
                    </StackPanel>

                    <!-- Email -->
                    <StackPanel Orientation="Horizontal"
                            HorizontalAlignment="Center">
                        <TextBlock Text="{Binding Email}"
                               FontSize="10"
                               Foreground="White"
                               TextWrapping="Wrap"/>
                    </StackPanel>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</Window>