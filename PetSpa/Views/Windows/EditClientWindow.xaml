<Window x:Class="PetSpa.Views.Windows.EditClientWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PetSpa.Views.Windows"
        mc:Ignorable="d"
        Height="720" Width="1080"
        Title="EditClientPage"
        WindowStartupLocation="CenterScreen">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="20"/>
            <ColumnDefinition Width="110"/>
            <ColumnDefinition Width="370"/>
            <ColumnDefinition Width="80"/>
            <ColumnDefinition Width="370"/>
            <ColumnDefinition Width="110"/>
            <ColumnDefinition Width="20"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="65"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="64"/>
            <RowDefinition Height="64"/>
            <RowDefinition Height="64"/>
            <RowDefinition Height="64"/>
            <RowDefinition Height="64"/>
            <RowDefinition Height="64"/>
            <RowDefinition Height="64"/>
            <RowDefinition Height="64"/>
            <RowDefinition Height="64"/>
        </Grid.RowDefinitions>

        <!-- Фон -->
        <Image Source="/Resources/Images/BackgroundEditWindow.png" Grid.ColumnSpan="7" Grid.RowSpan="12" Stretch="Fill"/>

        <!-- Данные клиента -->
        <TextBlock Grid.Column="1" Grid.Row="1" Grid.ColumnSpan="2" Grid.RowSpan="2"
                   Text="Данные клиента" 
                   HorizontalAlignment="Center"
                   Style="{StaticResource HeaderTextBlockStyle}"/>

        <!-- ФИО -->
        <Border Grid.Column="1" Grid.Row="5" Grid.ColumnSpan="2"
                CornerRadius="10"
                Background="White"
                BorderBrush="#66FFFFFF"
                BorderThickness="2"
                Width="380" Height="40"
                HorizontalAlignment="Center">
            <TextBox Text="{Binding FullName, UpdateSourceTrigger=PropertyChanged}"
                     Name="FCsTb" 
                     Foreground="#DF6C2D"
                     Style="{StaticResource BorderedTextBoxStyle}"/>
        </Border>

        <!-- Телефон -->
        <Border Grid.Column="1" Grid.Row="6" Grid.ColumnSpan="2"
                CornerRadius="10"
                Background="White"
                BorderBrush="#66FFFFFF"
                BorderThickness="2"
                Width="380" Height="40"
                HorizontalAlignment="Center">
            <TextBox Text="{Binding Phone, UpdateSourceTrigger=PropertyChanged}" 
                     Name="PhoneTb" 
                     Foreground="#DF6C2D"
                     Style="{StaticResource BorderedTextBoxStyle}"/>
        </Border>

        <!-- Дата рождения клиента -->
        <Border Grid.Column="1" Grid.Row="7" Grid.ColumnSpan="2"
                CornerRadius="10"
                Background="White"
                BorderBrush="#66FFFFFF"
                BorderThickness="2"
                Width="380" Height="40"
                HorizontalAlignment="Center">
            <TextBox Text="{Binding BirthDate, StringFormat='dd.MM.yyyy', UpdateSourceTrigger=PropertyChanged}"
                     Name="ClientBirthdayTb" 
                     Foreground="#DF6C2D"
                     Style="{StaticResource BorderedTextBoxStyle}"/>
        </Border>

        <!-- Данные питомца -->
        <TextBlock Grid.Column="4" Grid.Row="8" Grid.ColumnSpan="3" Grid.RowSpan="2"
                   Text="Данные питомца" 
                   HorizontalAlignment="Center"
                   Style="{StaticResource HeaderTextBlockStyle}"/>

        <!-- Добавить питомца -->
        <Button Name="AddPetBtn" Click="AddPetBtn_Click"
                    Content="Добавить питомца" Grid.Row="10" Grid.Column="4" Grid.ColumnSpan="2"
                    Style="{StaticResource WhiteOrangeButtonStyle}"
                    Width="300" Height="50" HorizontalAlignment="Center"
                    FontSize="15"/>

        <!-- Комбобокс -->
        <ComboBox Name="PetsComboBox" 
                  Grid.Row="1" Grid.Column="4"
                  Width="250" Height="30"
                  FontSize="20"
                  SelectionChanged="PetsComboBox_SelectionChanged"
                  Style="{StaticResource ComboboxStyle}">
        </ComboBox>

        <!-- Имя питомца -->
        <Border Grid.Column="4" Grid.Row="3" Grid.ColumnSpan="2"
                CornerRadius="10"
                Background="White"
                BorderBrush="#66FFFFFF"
                BorderThickness="2"
                Width="380" Height="40"
                HorizontalAlignment="Center">
            <TextBox Text="{Binding PetName, UpdateSourceTrigger=PropertyChanged}" 
                     Name="PetNameTb" 
                     Foreground="#DF6C2D"
                     Style="{StaticResource BorderedTextBoxStyle}"/>
        </Border>

        <!-- Вес питомца -->
        <Border Grid.Column="4" Grid.Row="4" Grid.ColumnSpan="2"
                CornerRadius="10"
                Background="White"
                BorderBrush="#66FFFFFF"
                BorderThickness="2"
                Width="380" Height="40"
                HorizontalAlignment="Center">
            <TextBox Text="{Binding PetWeight, UpdateSourceTrigger=PropertyChanged}"
                     Name="WeightTb" 
                     Foreground="#DF6C2D"
                     Style="{StaticResource BorderedTextBoxStyle}"/>
        </Border>

        <!-- Дата рождения питомца -->
        <Border Grid.Column="4" Grid.Row="5" Grid.ColumnSpan="2"
                CornerRadius="10"
                Background="White"
                BorderBrush="#66FFFFFF"
                BorderThickness="2"
                Width="380" Height="40"
                HorizontalAlignment="Center">
            <TextBox Text="{Binding PetBirthday, StringFormat='dd.MM.yyyy', UpdateSourceTrigger=PropertyChanged}"
                     Name="PetBirthdayTb" 
                     Foreground="#DF6C2D"
                     Style="{StaticResource BorderedTextBoxStyle}"/>
        </Border>
                 
        <!-- Кнопка удалить -->
        <Button Name="DeleteBtn" Grid.Column="5" Grid.Row="6" Grid.RowSpan="2"
                Style="{StaticResource TransparentButtonStyle}"
                Tag="{Binding}"
                Click="DeleteBtn_Click"
                ToolTip="Удалить питомца">
            <StackPanel Orientation="Horizontal">
                <Image Source="/Resources/Icons/TrashIcon.png"
                                           Stretch="Fill" Width="50" Height="55"/>
            </StackPanel>
        </Button>

        <!-- Собачка слева снизу-->
        <Image Source="/Resources/Images/AddDog.png" Grid.Row="9" Grid.Column="1" Grid.ColumnSpan="2" Grid.RowSpan="3" HorizontalAlignment="Left" Margin="-20 0 0 20"/>

        <!-- Собачка справа сверху-->
        <Image Source="/Resources/Images/DogImage2.png" Grid.RowSpan="3" Grid.Column="4" Grid.ColumnSpan="2" Stretch="Fill" HorizontalAlignment="Right" Margin="320 0 0 -20"/>

        <!-- Сохранить -->
        <Button Name="SaveBtn" Click="SaveBtn_Click"
                    Content="Сохранить" Grid.Row="9" Grid.Column="2"
                    Style="{StaticResource OrangeWhiteButtonStyle}"
                    Width="250" Height="40" HorizontalAlignment="Center"
                    FontSize="15"/>

        <!-- Отменить -->
        <Button Name="CancelBtn" Click="CancelBtn_Click"
                    Content="Отменить" Grid.Row="10" Grid.Column="2"
                    Style="{StaticResource BeigeGrayButtonStyle}"
                    Width="250" Height="40" HorizontalAlignment="Center"
                    FontSize="15"/>
    </Grid>
</Window>
