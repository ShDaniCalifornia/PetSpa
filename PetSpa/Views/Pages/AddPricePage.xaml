<Page x:Class="PetSpa.Views.Pages.AddPricePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PetSpa.Views.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="1080"
      Title="AddPricePage">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="20"/>
            <ColumnDefinition Width="260"/>
            <ColumnDefinition Width="60"/>
            <ColumnDefinition Width="660"/>
            <ColumnDefinition Width="60"/>
            <ColumnDefinition Width="20"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="62"/>
            <RowDefinition Height="62"/>
            <RowDefinition Height="150"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="62"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="62"/>
            <RowDefinition Height="62"/>
            <RowDefinition Height="62"/>
            <RowDefinition Height="62"/>
        </Grid.RowDefinitions>

        <!-- Фото -->
        <Border Grid.Column="1" Grid.Row="1" Grid.RowSpan="3"
                BorderBrush="#DDD" BorderThickness="1" CornerRadius="5"
                Width="200" Height="200"
                Background="#DF6C2D"
                HorizontalAlignment="Center"
                VerticalAlignment="Top">

            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <Button Name="AddPhotoButton"
                        Click="AddPhotoButton_Click"
                        Style="{StaticResource IconButtonStyle}"
                        HorizontalAlignment="Center"
                        Background="Transparent"
                        BorderThickness="0">
                    <Image Source="/Resources/Icons/PlusPhotoIcon.png"
                           Stretch="Fill" Width="30" Height="30"/>
                </Button>
                <TextBlock Text="Добавить фото" 
                           Margin="0,10,0,0"
                           HorizontalAlignment="Center"
                           FontSize="11"
                           Foreground="White"/>
            </StackPanel>
        </Border>

        <!-- Название -->
        <Border Grid.Column="3" Grid.Row="0"
                CornerRadius="10"
                Background="White"
                BorderBrush="#66FFFFFF"
                BorderThickness="2"
                Margin="10,0,10,0"
                Width="600" Height="40">

            <TextBox Name="TitleTb"
                     Text="Название услуги" 
                     Foreground="#DF6C2D"
                     Style="{StaticResource BorderedTextBoxStyle}"
                     GotFocus="TitleTb_GotFocus"
                     LostFocus="TitleTb_LostFocus"/>
        </Border>

        <!-- Минимальная цена -->
        <Border Grid.Column="3" Grid.Row="1"
                CornerRadius="10"
                Background="White"
                BorderBrush="#66FFFFFF"
                BorderThickness="2"
                Margin="10,0,10,0"
                Width="600" Height="40">

            <TextBox Name="MinPriceTb" 
                     Text="Минимальная цена" 
                     Foreground="#DF6C2D"
                     Style="{StaticResource BorderedTextBoxStyle}"
                     GotFocus="MinPriceTb_GotFocus"
                     LostFocus="MinPriceTb_LostFocus"/>
        </Border>

        <!-- Пункты описания -->
        <StackPanel Grid.Column="3" Grid.Row="2" Grid.RowSpan="5">
            <TextBlock Text="Описание" 
                       Style="{StaticResource BaseTextBlockStyle}"
                       Foreground="Black" 
                       HorizontalAlignment="Center" 
                       FontSize="20"
                       Margin="0,0,0,15"/>

            <!-- Динамический список пунктов -->
            <ItemsControl Name="DescriptionItemsControl" 
                  ItemsSource="{Binding DescriptionPoints}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Grid Margin="0,0,0,10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <!-- Номер пункта -->
                            <TextBlock Grid.Column="0"
                                       Text="{Binding Number}"
                                       Margin="0,0,10,0"
                                       VerticalAlignment="Center"
                                       FontSize="14"
                                       FontWeight="SemiBold"
                                       Foreground="#666"
                                       Width="20"/>

                            <!-- Простой TextBox без сложных стилей -->
                            <Border Grid.Column="1" 
                                    Background="White"
                                    BorderBrush="#66FFFFFF"
                                    BorderThickness="2"
                                    CornerRadius="10"
                                    Height="40">
                                <Border.Effect>
                                    <DropShadowEffect ShadowDepth="0" 
                                              BlurRadius="10" 
                                              Color="#888888"
                                              Opacity="0.5"/>
                                </Border.Effect>
                                <TextBox Text="{Binding Text, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                         Background="Transparent"
                                         BorderThickness="0"
                                         Padding="10 6 0 10"
                                         FontSize="14"
                                         Foreground="#DF6C2D"
                                         VerticalAlignment="Center"
                                         VerticalContentAlignment="Center"/>
                            </Border>

                            <!-- Кнопка удаления -->
                            <Button Grid.Column="2" Name="RemovePointBtn"
                                    Content="-"
                                    Margin="10,0,0,0" Width="40" Height="40"
                                    FontSize="16" FontWeight="Bold"
                                    Background="#FF6B6B" Foreground="White" BorderThickness="0"
                                    Click="RemovePointBtn_Click"
                                    Tag="{Binding}" Cursor="Hand"
                                    VerticalAlignment="Center">
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Setter Property="Visibility" Value="Visible"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsFirst}" Value="True">
                                                <Setter Property="Visibility" Value="Collapsed"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                            </Button>
                        </Grid>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>

            <!-- Сообщение о максимальном количестве пунктов -->
            <TextBlock Name="MaxPointsMessage"
                       Text="Можно добавить не более 5 пунктов"
                       Foreground="#FF6B6B"
                       FontSize="12"
                       Margin="0,10,0,0"
                       HorizontalAlignment="Left"
                       Visibility="Collapsed"/>

            <!-- Кнопка добавления нового пункта -->
            <Button Name="AddPointButton" Click="AddPointButton_Click"
                    Style="{StaticResource IconButtonStyle}"
                    HorizontalAlignment="Left">
                <Button.Content>
                    <Image Source="/Resources/Icons/PlusIcon.png"
                   Stretch="Fill" Width="30" Height="30"/>
                </Button.Content>
            </Button>
        </StackPanel>

        <!-- Стоимость (от) - весовые категории -->
        <Border Grid.Column="1" Grid.Row="6"
                CornerRadius="10"
                Background="White"
                BorderBrush="#66FFFFFF"
                BorderThickness="2"
                Width="250" Height="40"
                HorizontalAlignment="Center">

            <TextBox Name="PriceValue1Tb" 
                     Text="2,6-5,5 кг" 
                     Foreground="#DF6C2D"
                     Style="{StaticResource BorderedTextBoxStyle}"
                     GotFocus="PriceValue1Tb_GotFocus"
                     LostFocus="PriceValue1Tb_LostFocus"/>
        </Border>

        <Border Grid.Column="1" Grid.Row="7"
                CornerRadius="10"
                Background="White"
                BorderBrush="#66FFFFFF"
                BorderThickness="2"
                Width="250" Height="40"
                HorizontalAlignment="Center">

            <TextBox Name="PriceValue2Tb" 
                     Text="5,6-10,5 кг" 
                     Foreground="#DF6C2D"
                     Style="{StaticResource BorderedTextBoxStyle}"
                     GotFocus="PriceValue2Tb_GotFocus"
                     LostFocus="PriceValue2Tb_LostFocus"/>
        </Border>

        <Border Grid.Column="1" Grid.Row="8"
                CornerRadius="10"
                Background="White"
                BorderBrush="#66FFFFFF"
                BorderThickness="2"
                Width="250" Height="40"
                HorizontalAlignment="Center">

            <TextBox Name="PriceValue3Tb" 
                     Text=">10,6 кг" 
                     Foreground="#DF6C2D"
                     Style="{StaticResource BorderedTextBoxStyle}"
                     GotFocus="PriceValue3Tb_GotFocus"
                     LostFocus="PriceValue3Tb_LostFocus"/>
        </Border>

        <!-- Сохранить -->
        <Button Name="SaveBtn" Click="SaveBtn_Click"
                Content="Сохранить" Grid.Row="7" Grid.Column="3"
                Style="{StaticResource OrangeWhiteButtonStyle}"
                Width="450" Height="50" HorizontalAlignment="Center"
                FontSize="15"/>

        <!-- Отменить -->
        <Button Name="CancelBtn" Click="CancelBtn_Click"
                Content="Отменить" Grid.Row="8" Grid.Column="3"
                Style="{StaticResource BeigeGrayButtonStyle}"
                Width="450" Height="50" HorizontalAlignment="Center"
                FontSize="15"/>

    </Grid>
</Page>