<Page x:Class="PetSpa.Views.Pages.AddAppointmentPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PetSpa.Views.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="1080"
      Title="AddAppointmentPage">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="20"/>
            <ColumnDefinition Width="660"/>
            <ColumnDefinition Width="60"/>
            <ColumnDefinition Width="260"/>
            <ColumnDefinition Width="60"/>
            <ColumnDefinition Width="20"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition Height="60"/>
            <RowDefinition Height="60"/>
            <RowDefinition Height="60"/>
            <RowDefinition Height="60"/>
            <RowDefinition Height="60"/>
            <RowDefinition Height="60"/>
            <RowDefinition Height="60"/>
            <RowDefinition Height="60"/>
            <RowDefinition Height="60"/>
        </Grid.RowDefinitions>

        <!-- Комбобокс Услуги -->
        <Border Grid.Column="1" Grid.Row="0"
                Background="White"
                BorderBrush="#66FFFFFF"
                BorderThickness="2"
                Margin="10,10,10,0"
                Width="600" Height="40">
            <Border.Clip>
                <RectangleGeometry RadiusX="10" RadiusY="10" Rect="0,0,600,40"/>
            </Border.Clip>

            <ComboBox Name="ServiceComboBox"
                      SelectedValuePath="id_service"
                      DisplayMemberPath="name_service"
                      FontSize="14"
                      Background="Transparent"
                      BorderThickness="0">
            </ComboBox>
        </Border>

        <!-- Дата -->
        <Border Grid.Column="1" Grid.Row="1"
                Background="White"
                BorderBrush="#66FFFFFF"
                BorderThickness="2"
                Margin="10,0,10,0"
                Width="600" Height="40">
            <Border.Clip>
                <RectangleGeometry RadiusX="10" RadiusY="10" Rect="0,0,600,40"/>
            </Border.Clip>

            <DatePicker Name="AppointmentDatePicker"
                        SelectedDateFormat="Short"
                        FirstDayOfWeek="Monday"
                        FontSize="14"
                        VerticalAlignment="Center"
                        Background="Transparent"
                        BorderThickness="0"/>
        </Border>

        <!-- Время -->
        <Border Grid.Column="1" Grid.Row="2"
                Background="White"
                BorderBrush="#66FFFFFF"
                BorderThickness="2"
                Margin="10,0,10,0"
                Width="600" Height="40">
            <Border.Clip>
                <RectangleGeometry RadiusX="10" RadiusY="10" Rect="0,0,600,40"/>
            </Border.Clip>

            <ComboBox Name="TimeComboBox"
                      SelectedValuePath="Tag"
                      FontSize="14"
                      VerticalAlignment="Center"
                      Background="Transparent"
                      BorderThickness="0">
            </ComboBox>
        </Border>

        <!-- ФИО владельца -->
        <Border Grid.Column="1" Grid.Row="3"
                CornerRadius="10"
                Background="White"
                BorderBrush="#66FFFFFF"
                BorderThickness="2"
                Margin="10,0,10,0"
                Width="600" Height="40">
            <TextBox Name="OwnerNameTb"
                     Text="ФИО владельца" 
                     FontSize="14"
                     Height="30"
                     VerticalAlignment="Center"
                     GotFocus="OwnerNameTb_GotFocus"
                     LostFocus="OwnerNameTb_LostFocus"
                     Foreground="#DF6C2D"
                     Style="{StaticResource BorderedTextBoxStyle}"/>
        </Border>

        <!-- Кличка питомца -->
        <Border Grid.Column="1" Grid.Row="4"
                CornerRadius="10"
                Background="White"
                BorderBrush="#66FFFFFF"
                BorderThickness="2"
                Margin="10,0,10,0"
                Width="600" Height="40">
            <TextBox Name="PetNameTb"
                     Text="Кличка питомца" 
                     FontSize="14"
                     Height="30"
                     VerticalAlignment="Center"
                     GotFocus="PetNameTb_GotFocus"
                     LostFocus="PetNameTb_LostFocus"
                     Foreground="#DF6C2D"
                     Style="{StaticResource BorderedTextBoxStyle}"/>
        </Border>

        
        <!-- Порода питомца -->
        <Border Grid.Column="1" Grid.Row="5"
                CornerRadius="10"
                Background="White"
                BorderBrush="#66FFFFFF"
                BorderThickness="2"
                Margin="10,0,10,0"
                Width="600" Height="40">
            <TextBox Name="PetBreedTb"
                     Text="Порода питомца" 
                     FontSize="14"
                     Height="30"
                     VerticalAlignment="Center"
                     GotFocus="PetBreedTb_GotFocus"
                     LostFocus="PetBreedTb_LostFocus"
                     Foreground="#DF6C2D"
                     Style="{StaticResource BorderedTextBoxStyle}"/>
        </Border>

        <!-- Вес питомца -->
        <Border Grid.Column="1" Grid.Row="6"
                CornerRadius="10"
                Background="White"
                BorderBrush="#66FFFFFF"
                BorderThickness="2"
                Margin="10,0,10,0"
                Width="600" Height="40">
            <TextBox Name="PetWeightTb"
                     Text="Вес питомца (кг)" 
                     FontSize="14"
                     Height="30"
                     VerticalAlignment="Center"
                     GotFocus="PetWeightTb_GotFocus"
                     LostFocus="PetWeightTb_LostFocus"
                     Foreground="#DF6C2D"
                     Style="{StaticResource BorderedTextBoxStyle}"/>
        </Border>

        <!-- Сохранить -->
        <Button Name="SaveBtn" Click="SaveBtn_Click"
                Content="Сохранить" Grid.Row="7" Grid.Column="1"
                Width="550" Height="50" HorizontalAlignment="Center"
                FontSize="15" Background="#DF6C2D" Foreground="White"
                BorderBrush="#DF6C2D" BorderThickness="1">
            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <Border Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}">
                        <Border.Clip>
                            <RectangleGeometry RadiusX="10" RadiusY="10" 
                                               Rect="0,0,550,50"/>
                        </Border.Clip>
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                </ControlTemplate>
            </Button.Template>
        </Button>

        <!-- Отменить -->
        <Button Name="CancelBtn" Click="CancelBtn_Click"
                Content="Отменить" Grid.Row="8" Grid.Column="1"
                Width="550" Height="50" HorizontalAlignment="Center"
                FontSize="15" Background="#F5F5F5" Foreground="#666666"
                BorderBrush="#CCCCCC" BorderThickness="1">
            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <Border Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}">
                        <Border.Clip>
                            <RectangleGeometry RadiusX="10" RadiusY="10" 
                                               Rect="0,0,550,50"/>
                        </Border.Clip>
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                </ControlTemplate>
            </Button.Template>
        </Button>

        <!-- Календарь -->
        <Border Grid.Column="3" Grid.Row="1" Grid.RowSpan="5"
                Background="White"
                BorderBrush="#DF6C2D"
                BorderThickness="2"
                Margin="0,10,0,10"
                Padding="10">
            <Border.Clip>
                <RectangleGeometry RadiusX="10" RadiusY="10" 
                                   Rect="0,0,260,400"/>
            </Border.Clip>

            <Border.Effect>
                <DropShadowEffect ShadowDepth="0" 
                                  BlurRadius="10" 
                                  Color="#888888"
                                  Opacity="0.5"/>
            </Border.Effect>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Год и месяц -->
                <StackPanel Grid.Row="0" Orientation="Horizontal"
                            HorizontalAlignment="Center"
                            Margin="0,0,20,15">
                    <TextBlock Text="{Binding DisplayYear}"
                               FontSize="16"
                               FontWeight="Bold"
                               Foreground="#DF6C2D"/>
                    <TextBlock Text=" год "
                               FontSize="16"
                               Foreground="#DF6C2D"/>
                    <TextBlock Text="{Binding DisplayMonth}"
                               FontSize="16"
                               FontWeight="Bold"
                               Foreground="#DF6C2D"/>
                </StackPanel>

                <!-- Дни недели -->
                <Grid Grid.Row="1" Margin="0,0,30,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0" Text="пн"
                               HorizontalAlignment="Center"
                               FontSize="12"
                               Foreground="#666"/>
                    <TextBlock Grid.Column="1" Text="вт"
                               HorizontalAlignment="Center"
                               FontSize="12"
                               Foreground="#666"/>
                    <TextBlock Grid.Column="2" Text="ср"
                               HorizontalAlignment="Center"
                               FontSize="12"
                               Foreground="#666"/>
                    <TextBlock Grid.Column="3" Text="чт"
                               HorizontalAlignment="Center"
                               FontSize="12"
                               Foreground="#666"/>
                    <TextBlock Grid.Column="4" Text="пт"
                               HorizontalAlignment="Center"
                               FontSize="12"
                               Foreground="#666"/>
                    <TextBlock Grid.Column="5" Text="сб"
                               HorizontalAlignment="Center"
                               FontSize="12"
                               Foreground="#DF6C2D"
                               FontWeight="SemiBold"/>
                    <TextBlock Grid.Column="6" Text="вс"
                               HorizontalAlignment="Center"
                               FontSize="12"
                               Foreground="#DF6C2D"
                               FontWeight="SemiBold"/>
                </Grid>

                <!-- Ячейки календаря -->
                <ItemsControl Grid.Row="2" Name="CalendarDaysControl">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <UniformGrid Columns="7" Rows="6"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>

                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Width="30" Height="30"
                                    Background="Transparent"
                                    BorderBrush="Transparent"
                                    BorderThickness="0"
                                    Margin="2">
                                <Border.Clip>
                                    <RectangleGeometry RadiusX="15" RadiusY="15" Rect="0,0,30,30"/>
                                </Border.Clip>
                                <TextBlock Text="{Binding Day}"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center"
                                           FontSize="12"
                                           Foreground="{Binding TextColor}"/>
                                <Border.Style>
                                    <Style TargetType="Border">
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsToday}" Value="True">
                                                <Setter Property="Background" Value="#DF6C2D"/>
                                                <Setter Property="BorderBrush" Value="#DF6C2D"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding IsSelected}" Value="True">
                                                <Setter Property="Background" Value="#FF8C42"/>
                                                <Setter Property="BorderBrush" Value="#FF8C42"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding IsCurrentMonth}" Value="False">
                                                <Setter Property="Opacity" Value="0.3"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Border.Style>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>

                <!-- Кнопки навигации -->
                <StackPanel Grid.Row="0" Orientation="Horizontal"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Center">
                    <Button Name="PrevMonthBtn" Click="PrevMonthBtn_Click"
                            Background="Transparent"
                            BorderThickness="0"
                            Width="24" Height="24"
                            Margin="0,0,10,0">
                        <TextBlock Text="‹" FontSize="20" Foreground="#DF6C2D"/>
                    </Button>

                    <Button Name="NextMonthBtn" Click="NextMonthBtn_Click"
                            Background="Transparent"
                            BorderThickness="0"
                            Width="24" Height="24">
                        <TextBlock Text="›" FontSize="20" Foreground="#DF6C2D"/>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Page>