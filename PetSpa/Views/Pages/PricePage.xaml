<Page x:Class="PetSpa.Views.Pages.PricePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PetSpa.Views.Pages"
      xmlns:appdata="clr-namespace:PetSpa.AppData"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="1080"
      Title="PricePage">

    <Page.Resources>
        <appdata:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>

        <!-- Шаблон для обычной карточки услуги -->
        <DataTemplate x:Key="ServiceCardTemplate">
            <Border Width="280" Height="300"
                    Margin="20,10"
                    Background="White"
                    CornerRadius="15"
                    Cursor="Hand">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="150"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Квадратное изображение услуги -->
                    <Border Grid.Row="0"
                            CornerRadius="15,15,0,0"
                            Background="#F0F0F0">
                        <Image Source="{Binding PhotoUrl}"
                               Stretch="UniformToFill"
                               Width="200" Height="150"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"/>
                    </Border>

                    <!-- Название и цена -->
                    <StackPanel Grid.Row="1" 
                                Margin="15,10,15,5"
                                HorizontalAlignment="Center">
                        <TextBlock Text="{Binding Name}"
                                   FontSize="18"
                                   FontWeight="Bold"
                                   Foreground="#DF6C2D"
                                   TextWrapping="Wrap"
                                   HorizontalAlignment="Center"
                                   TextAlignment="Center"
                                   MaxWidth="250"/>

                        <TextBlock Text="{Binding FormattedPrice}"
                                   FontSize="16"
                                   FontWeight="SemiBold"
                                   Foreground="#333333"
                                   Margin="0,5,0,0"
                                   HorizontalAlignment="Center"/>
                    </StackPanel>

                    <!-- Описание по пунктам -->
                    <StackPanel Grid.Row="2" Margin="15,5,15,15">
                        <ItemsControl ItemsSource="{Binding DescriptionPoints}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal" Margin="0,2">
                                        <TextBlock Text="• " 
                                                   FontSize="12" 
                                                   Foreground="#666666"/>
                                        <TextBlock Text="{Binding}" 
                                                   FontSize="12" 
                                                   Foreground="#666666" 
                                                   TextWrapping="Wrap"/>
                                    </StackPanel>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </Grid>
            </Border>
        </DataTemplate>

        <!-- Шаблон для карточки "Добавить прайс" -->
        <DataTemplate x:Key="AddCardTemplate">
            <Border Width="280" Height="300"
                    Margin="20,10"
                    Background="#DF6C2D"
                    CornerRadius="15"
                    Cursor="Hand"
                    MouseLeftButtonDown="AddPriceCard_MouseLeftButtonDown">

                <Border.Style>
                    <Style TargetType="Border">
                        <Setter Property="Opacity" Value="1"/>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Opacity" Value="0.9"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Border.Style>

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Большой плюс по центру -->
                    <Viewbox Grid.Row="0" 
                             Width="80" Height="80"
                             HorizontalAlignment="Center"
                             VerticalAlignment="Center">
                        <TextBlock Text="+" 
                                   FontWeight="Bold"
                                   Foreground="White"/>
                    </Viewbox>

                    <!-- Белый овал с оранжевым текстом -->
                    <Border Grid.Row="1" 
                            Background="White"
                            CornerRadius="15"
                            Height="40"
                            Margin="40,0,40,30"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Bottom">

                        <TextBlock Text="Добавить прайс"
                                   FontSize="16"
                                   FontWeight="SemiBold"
                                   Foreground="#DF6C2D"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"/>
                    </Border>
                </Grid>
            </Border>
        </DataTemplate>
    </Page.Resources>

    <Grid Background="#F5F5F5">
        <Grid.RowDefinitions>
            <RowDefinition Height="350"/>
            <RowDefinition Height="250"/>
        </Grid.RowDefinitions>

        <!-- Верхняя часть - Карточки услуг -->
        <Border Grid.Row="0" Background="White" Margin="10,10,10,5">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Обертка для карточек с навигацией -->
                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="50"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="50"/>
                    </Grid.ColumnDefinitions>

                    <!-- Кнопка назад (слева) -->
                    <Button Grid.Column="0"
                            Name="PrevPageButton"
                            Click="PrevPageButton_Click"
                            Style="{StaticResource TransparentButtonStyle}"
                            IsEnabled="{Binding HasPreviousPage}"
                            Visibility="{Binding HasPreviousPage, Converter={StaticResource BooleanToVisibilityConverter}}"
                            VerticalAlignment="Center"
                            HorizontalAlignment="Center">
                        <Image Source="/Resources/Icons/LeftArrow.png"
                               Width="30" Height="30"/>
                    </Button>

                    <!-- Карточки услуг -->
                    <ScrollViewer Grid.Column="1" 
                                  HorizontalScrollBarVisibility="Hidden"
                                  VerticalScrollBarVisibility="Hidden">
                        <ItemsControl Name="ServicesItemsControl"
                                      ItemsSource="{Binding CurrentPageServices}"
                                      HorizontalAlignment="Center">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <WrapPanel Orientation="Horizontal"
                                               HorizontalAlignment="Center"/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>

                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <!-- Выбираем шаблон в зависимости от типа карточки -->
                                    <ContentControl Content="{Binding}">
                                        <ContentControl.Style>
                                            <Style TargetType="ContentControl">
                                                <!-- Обычная карточка услуги -->
                                                <Setter Property="ContentTemplate" Value="{StaticResource ServiceCardTemplate}"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding IsAddCard}" Value="True">
                                                        <!-- Карточка "Добавить прайс" -->
                                                        <Setter Property="ContentTemplate" Value="{StaticResource AddCardTemplate}"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </ContentControl.Style>
                                    </ContentControl>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>

                    <!-- Кнопка вперед (справа) -->
                    <Button Grid.Column="2"
                            Name="NextPageButton"
                            Click="NextPageButton_Click"
                            Style="{StaticResource TransparentButtonStyle}"
                            IsEnabled="{Binding HasNextPage}"
                            VerticalAlignment="Center"
                            HorizontalAlignment="Center">
                        <Image Source="/Resources/Icons/RightArrow.png"
                               Width="30" Height="30"/>
                    </Button>
                </Grid>
            </Grid>
        </Border>

        <!-- Нижняя часть - Таблица цен -->
        <Border Grid.Row="1" Background="White" Margin="10,0,10,10"
                Visibility="{Binding IsTableVisible, Converter={StaticResource BooleanToVisibilityConverter}}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="40"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Заголовок таблицы -->
                <Border Grid.Row="0" 
                        Background="Transparent"
                        CornerRadius="8,8,0,0">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="120"/>
                            <ColumnDefinition Width="200"/>
                            <ColumnDefinition Width="200"/>
                            <ColumnDefinition Width="200"/>
                        </Grid.ColumnDefinitions>

                        <!-- Заголовок "Вес" -->
                        <Border Grid.Column="0"
                                BorderBrush="White"
                                BorderThickness="0,0,1,0">
                            <TextBlock Text="Вес"
                                       FontSize="14"
                                       FontWeight="Bold"
                                       Foreground="#FFA726"
                                       VerticalAlignment="Center"
                                       HorizontalAlignment="Center"/>
                        </Border>

                        <!-- Заголовки ценовых колонок-->
                        <Border Grid.Column="1" Margin="80 0 0 0"
                                BorderBrush="Transparent"
                                BorderThickness="0,0,1,0">
                            <StackPanel Orientation="Vertical"
                                        VerticalAlignment="Center"
                                        HorizontalAlignment="Center">
                                <TextBlock Text="Стоимость"
                                           FontSize="12"
                                           Foreground="#FFA726"
                                           HorizontalAlignment="Center"/>
                                <TextBlock Text="(от)"
                                           FontSize="10"
                                           Foreground="#FFA726"
                                           HorizontalAlignment="Center"/>
                            </StackPanel>
                        </Border>

                        <Border Grid.Column="2" Margin="80 0 -220 0"
                                BorderBrush="Transparent"
                                BorderThickness="0,0,1,0">
                            <StackPanel Orientation="Vertical"
                                        VerticalAlignment="Center"
                                        HorizontalAlignment="Center">
                                <TextBlock Text="Стоимость"
                                           FontSize="12"
                                           Foreground="#FFA726"
                                           HorizontalAlignment="Center"/>
                                <TextBlock Text="(от)"
                                           FontSize="10"
                                           Foreground="#FFA726"
                                           HorizontalAlignment="Center"/>
                            </StackPanel>
                        </Border>

                        <Border Grid.Column="3" Margin="180 0 -320 0"
                                BorderBrush="Transparent">
                            <StackPanel Orientation="Vertical"
                                        VerticalAlignment="Center"
                                        HorizontalAlignment="Center">
                                <TextBlock Text="Стоимость"
                                           FontSize="12"
                                           Foreground="#FFA726"
                                           HorizontalAlignment="Center"/>
                                <TextBlock Text="(от)"
                                           FontSize="10"
                                           Foreground="#FFA726"
                                           HorizontalAlignment="Center"/>
                            </StackPanel>
                        </Border>
                    </Grid>
                </Border>

                <!-- Таблица цен -->
                <ScrollViewer Grid.Row="1" 
                              VerticalScrollBarVisibility="Auto"
                              HorizontalScrollBarVisibility="Hidden">
                    <ItemsControl Name="PriceListView"
                                  ItemsSource="{Binding PriceTableRows}"
                                  Background="Transparent">

                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <StackPanel Orientation="Vertical"/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>

                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <!-- Овальная строка таблицы -->
                                <Border Background="#FAE9DF" 
                                        Margin="10,3" 
                                        Padding="10,0"
                                        CornerRadius="15"
                                        Width="1080"
                                        Height="30">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <!-- Вес -->
                                            <ColumnDefinition Width="120"/>
                                            <!-- Цена 1 -->
                                            <ColumnDefinition Width="220"/>
                                            <!-- Цена 2 -->
                                            <ColumnDefinition Width="220"/>
                                            <!-- Цена 3 -->
                                            <ColumnDefinition Width="220"/>
                                        </Grid.ColumnDefinitions>

                                        <!-- Вес -->
                                        <StackPanel Grid.Column="0" 
                                                    VerticalAlignment="Center"
                                                    HorizontalAlignment="Center">
                                            <TextBlock Text="{Binding Weight}"
                                                       FontSize="16"
                                                       FontWeight="Bold"
                                                       Foreground="#DF6C2D"
                                                       HorizontalAlignment="Center"/>
                                        </StackPanel>

                                        <!-- Цена для 1-й услуги -->
                                        <TextBlock Grid.Column="1" 
                                                   VerticalAlignment="Center"
                                                   HorizontalAlignment="Center"
                                                   Text="{Binding Price1}"
                                                   FontSize="16"
                                                   FontWeight="Bold"
                                                   Foreground="#DF6C2D"/>

                                        <!-- Цена для 2-й услуги -->
                                        <TextBlock Grid.Column="2" Margin="80 0 -100 0"
                                                   VerticalAlignment="Center"
                                                   HorizontalAlignment="Center"
                                                   Text="{Binding Price2}"
                                                   FontSize="16"
                                                   FontWeight="Bold"
                                                   Foreground="#DF6C2D"/>

                                        <!-- Цена для 3-й услуги -->
                                        <TextBlock Grid.Column="3" Margin="160 0 -180 0"
                                                   VerticalAlignment="Center"
                                                   HorizontalAlignment="Center"
                                                   Text="{Binding Price3}"
                                                   FontSize="16"
                                                   FontWeight="Bold"
                                                   Foreground="#DF6C2D"/>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </Grid>
        </Border>
    </Grid>
</Page>