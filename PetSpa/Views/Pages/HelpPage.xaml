<Page x:Class="PetSpa.Views.Pages.HelpPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PetSpa.Views.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="1080"
      Title="HelpPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="145"/>
            <RowDefinition Height="60"/>
            <RowDefinition Height="5"/>
            <RowDefinition Height="60"/>
            <RowDefinition Height="60"/>
            <RowDefinition Height="80"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition Width="580"/>
            <ColumnDefinition Width="250"/>
        </Grid.ColumnDefinitions>

        <TextBlock Grid.Row="1" Grid.Column="1" FontSize="25"
                    Text="Свяжитесь со службой поддержки" Foreground="Black"
                    HorizontalAlignment="Center"/>

        <Grid Grid.ColumnSpan="3" Grid.Row="2" Margin="200 0 200 0"
              Background="#DF6C2D"/>

        <Image Source="/Resources/Icons/PhoneIcon.png" Grid.Row="3" Grid.Column="1" HorizontalAlignment="Left"  Margin="140 30 10 0"/>

        <TextBlock Grid.Row="3" Grid.Column="1" FontSize="25"
                   Text="+7 (915) 999 75 76" Foreground="Black"
                   HorizontalAlignment="Center" VerticalAlignment="Bottom"/>


        <Button Name="ExitBtn" Click="ExitBtn_Click"
                Grid.Row="5" Grid.Column="1" 
                Style="{StaticResource OrangeWhiteButtonStyle}"
                Content="Выйти из системы" FontSize="20"
                Width="300" Height="60"/>

        <Image Source="/Resources/Images/DogImage1.png" Grid.Row="5" Grid.RowSpan="2"/>
        
        <Image Source="/Resources/Images/DogImage2.png" Grid.Row="5" Grid.RowSpan="2" Grid.Column="2"/>


    </Grid>
</Page>
