<Page x:Class="PetSpa.Views.Pages.ClientPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PetSpa.Views.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="1080"
      Title="ClientPage">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="20"/>
            <ColumnDefinition Width="660"/>
            <ColumnDefinition Width="20"/>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="20"/>
            <ColumnDefinition Width="140"/>
            <ColumnDefinition Width="20"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="55"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="10"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>

        <!-- Поле поиска -->
        <Border Grid.Row="1" Grid.Column="1" 
                CornerRadius="20"
                Background="#DF6C2D"
                BorderBrush="#66FFFFFF"
                BorderThickness="2"
                Margin="10,0,10,0"
                Height="40">

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="40"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Image Grid.Column="0"
                       Source="/Resources/Icons/SearchIcon.png"
                       Width="24"
                       Height="24"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center"/>

                <TextBox Grid.Column="1"
                         Name="SearchTextBox"
                         Text="Поиск"
                         Style="{StaticResource SearchTextBoxStyle}"
                         GotFocus="SearchTextBox_GotFocus"
                         LostFocus="SearchTextBox_LostFocus"
                         TextChanged="SearchTextBox_TextChanged"/>
            </Grid>
        </Border>

        <!-- Кнопка добавить клиента -->
        <Button Name="AddClientBtn" Click="AddClientBtn_Click"
                Grid.Row="1" Grid.Column="3"
                Style="{StaticResource BeigeGrayButtonStyle}"
                Content="Добавить клиента"
                Width="200" Height="40"/>

        <!-- Комбобокс сортировки -->
        <ComboBox Name="FilterComboBox" 
                  Grid.Row="1" Grid.Column="5"
                  Width="140" Height="30"
                  FontSize="20"
                  SelectedIndex="0"
                  SelectionChanged="FilterComboBox_SelectionChanged"
                  Style="{StaticResource ComboboxStyle}">
            <ComboBoxItem Content="Сортировка"/>
            <ComboBoxItem Content="По дате рождения клиента"/>
            <ComboBoxItem Content="По дате рождения питомца"/>
            <ComboBoxItem Content="По дате визита"/>
        </ComboBox>

        <!-- Таблица Клиентов -->
        <ListBox Name="ClientsLb"
                 Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="7" 
                 Background="Transparent"
                 BorderBrush="Transparent"
                 ScrollViewer.VerticalScrollBarVisibility="Hidden"
                 ScrollViewer.HorizontalScrollBarVisibility="Disabled">

            <ListBox.Template>
                <ControlTemplate TargetType="ListBox">
                    <ScrollViewer x:Name="ScrollViewer" 
                                  Padding="{TemplateBinding Padding}"
                                  Background="{TemplateBinding Background}"
                                  BorderBrush="{TemplateBinding BorderBrush}"
                                  BorderThickness="{TemplateBinding BorderThickness}"
                                  IsTabStop="False"
                                  CanContentScroll="True"
                                  PanningRatio="0.5">
                        <ItemsPresenter/>
                    </ScrollViewer>
                </ControlTemplate>
            </ListBox.Template>

            <!-- Стиль для ListBoxItem -->
            <ListBox.ItemContainerStyle>
                <Style TargetType="ListBoxItem">
                    <Setter Property="Background" Value="Transparent"/>
                    <Setter Property="BorderBrush" Value="Transparent"/>
                    <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="ListBoxItem">
                                <ContentPresenter/>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                    <Style.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="Transparent"/>
                        </Trigger>
                        <Trigger Property="IsSelected" Value="True">
                            <Setter Property="Background" Value="Transparent"/>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </ListBox.ItemContainerStyle>

            <ListBox.ItemsPanel>
                <ItemsPanelTemplate>
                    <!-- Одна вертикальная колонка -->
                    <StackPanel Orientation="Vertical" 
                       HorizontalAlignment="Center"/>
                </ItemsPanelTemplate>
            </ListBox.ItemsPanel>

            <ListBox.ItemTemplate>
                <DataTemplate>
                    <!-- Вытянутая овальная карточка -->
                    <Border Background="#FAE9DF" 
                            Margin="10,15" 
                            Padding="25 0 25 0"
                            CornerRadius="40"
                            Width="980"
                            Height="130">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <!-- Фото питомца -->
                                <ColumnDefinition Width="auto"/>
                                <!-- Отступ -->
                                <ColumnDefinition Width="40"/>
                                <!-- ФИО, телефон и даты -->
                                <ColumnDefinition Width="450"/>
                                <!-- Отступ -->
                                <ColumnDefinition Width="3"/>
                                <!-- Питомец и информация -->
                                <ColumnDefinition Width="200"/>
                                <!-- Отступ -->
                                <ColumnDefinition Width="3"/>
                                <!-- Кнопки -->
                                <ColumnDefinition Width="200"/>
                            </Grid.ColumnDefinitions>

                            <!-- Фото питомца (круглая) -->
                            <Grid Grid.Column="0"
                                  Width="70" Height="70"
                                  VerticalAlignment="Center"
                                  ToolTip="{Binding PetInfo}">

                                <!-- Внешний круг с обводкой -->
                                <Ellipse Stroke="#DF6C2D"
                                         StrokeThickness="2"
                                         Fill="#E0E0E0"/>

                                <!-- Изображение внутри -->
                                <Ellipse Width="66" Height="66">
                                    <Ellipse.Fill>
                                        <!-- Обрезка -->
                                        <ImageBrush ImageSource="{Binding PetPhotoUrl}"
                                                    Stretch="UniformToFill"/>
                                    </Ellipse.Fill>
                                </Ellipse>
                            </Grid>

                            <!-- Отступ -->
                            <Grid Grid.Column="3" Background="White"/>


                            <!-- ФИО, телефон и даты (вертикально) -->
                            <StackPanel Grid.Column="2" VerticalAlignment="Center">
                                <StackPanel Orientation="Horizontal" 
                                            Margin="0,0,0,15">
                                    <!-- ФИО -->
                                    <TextBlock FontWeight="Bold" FontSize="16" 
                                               Foreground="#DF6C2D" TextWrapping="Wrap"
                                               VerticalAlignment="Center">
                                        <Run Text="{Binding FullName}"/>
                                    </TextBlock>

                                    <!-- Телефон справа от ФИО -->
                                    <TextBlock FontSize="14" Foreground="#DF6C2D"
                                               Margin="30,0,0,0"
                                               VerticalAlignment="Center">
                                        <Run Text="{Binding FormattedPhone}"/>
                                    </TextBlock>
                                </StackPanel>

                                <!-- Последний визит -->
                                <TextBlock FontSize="13" Foreground="#DF6C2D"
                                           Margin="0,0,0,5">
                            <Run Text="Последний визит:"/>
                            <LineBreak/>
                            <Run Text="{Binding LastVisitText}" 
                                 FontWeight="SemiBold"/>
                                </TextBlock>

                                <!-- Дата рождения -->
                                <TextBlock FontSize="13" Foreground="#DF6C2D">
                            <Run Text="Дата рождения:"/>
                            <LineBreak/>
                            <Run Text="{Binding BirthDateText}" 
                                 FontWeight="SemiBold"/>
                                </TextBlock>
                            </StackPanel>

                            <!-- Информация о питомце -->
                            <StackPanel Grid.Column="4" VerticalAlignment="Center"
                                        HorizontalAlignment="Center">
                                <!-- Название питомца -->
                                <TextBlock FontSize="15" FontWeight="Bold" 
                                           HorizontalAlignment="Center"
                                           TextWrapping="Wrap"
                                           Foreground="#DF6C2D"
                                           Text="{Binding PetInfo}"
                                           Margin="0,0,0,10"/>

                                <!-- Вес -->
                                <Border Background="#FFE4D1" 
                                        CornerRadius="10" 
                                        Padding="12,6"
                                        Margin="0,0,0,8"
                                        HorizontalAlignment="Center">
                                    <TextBlock Foreground="#DF6C2D" FontSize="12"
                                               FontWeight="Bold">
                                <Run Text="Вес: "/>
                                <Run Text="{Binding PetWeight}"/>
                                <Run Text=" кг"/>
                                    </TextBlock>
                                </Border>

                                <!-- Возраст -->
                                <Border Background="#FFE4D1" 
                                        CornerRadius="10" 
                                        Padding="12,6"
                                        HorizontalAlignment="Center">
                                    <TextBlock Foreground="#DF6C2D" FontSize="12"
                                               FontWeight="Bold">
                                        <Run Text="Возраст: "/>
                                        <LineBreak/>
                                        <Run Text="{Binding PetAgeText}"/>
                                    </TextBlock>
                                </Border>
                            </StackPanel>

                            <!-- Отступ -->
                            <Grid Grid.Column="5" Background="White"/>

                            <!-- Кнопки редактировать и удалить -->
                            <StackPanel Grid.Column="6" 
                                Orientation="Vertical" 
                                VerticalAlignment="Center">
                                <!-- Кнопка редактировать -->
                                <Button Name="EditBtn" 
                                        Style="{StaticResource TransparentButtonStyle}"
                                        Tag="{Binding}"
                                        Click="EditBtn_Click"
                                        Margin="0,0,0,15"
                                        ToolTip="Редактировать клиента">
                                    <StackPanel Orientation="Horizontal">
                                        <Image Source="/Resources/Icons/EditIcon.png"
                                       Stretch="Fill" Width="40" Height="40"/>
                                    </StackPanel>
                                </Button>

                                <!-- Кнопка удалить -->
                                <Button Name="DeleteBtn" 
                                        Style="{StaticResource TransparentButtonStyle}"
                                        Tag="{Binding}"
                                        Click="DeleteBtn_Click"
                                        ToolTip="Удалить клиента">
                                    <StackPanel Orientation="Horizontal">
                                        <Image Source="/Resources/Icons/TrashIcon.png"
                                       Stretch="Fill" Width="40" Height="45"/>
                                    </StackPanel>
                                </Button>
                            </StackPanel>
                        </Grid>
                    </Border>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </Grid>
</Page>