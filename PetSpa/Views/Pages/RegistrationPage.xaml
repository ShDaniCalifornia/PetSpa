<Page x:Class="PetSpa.Views.Pages.RegistrationPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PetSpa.Views.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="1080"
      Title="RegistrationPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="140"/>
            <RowDefinition Height="60"/>
            <RowDefinition Height="10"/>
            <RowDefinition Height="80"/>
            <RowDefinition Height="10"/>
            <RowDefinition Height="80"/>
            <RowDefinition Height="10"/>
            <RowDefinition Height="80"/>
            <RowDefinition Height="10"/>
            <RowDefinition Height="80"/>
            <RowDefinition Height="40"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="343"/>
            <ColumnDefinition Width="380"/>
            <ColumnDefinition Width="350"/>
        </Grid.ColumnDefinitions>


        <!-- Регистрация -->
        <Grid Grid.Row="1" Grid.Column="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="340"/>
                <ColumnDefinition Width="40"/>
            </Grid.ColumnDefinitions>

            <TextBlock Text="Регистрация" Margin="60 0 0 0"
                       Style="{StaticResource HeaderTextBlockStyle}"/>

            <Button Name ="InfoBtn" Click="InfoBtn_Click" Grid.Column="1"
                    Background="Transparent" BorderBrush="Transparent"
                    VerticalAlignment="Top" HorizontalAlignment="Left"> 
                <Button.Content>
                    <Image Source="/Resources/Icons/InfoIcon.png"
                        Stretch="Fill" Width="20" Height="20"/>
                </Button.Content>
            </Button>

        </Grid>
        
        <!-- Поле ввода ФИО -->
        <Border Grid.Row="3" Grid.Column="1"
                CornerRadius="10"
                Background="#33FFFFFF"
                BorderBrush="#66FFFFFF"
                BorderThickness="2"
                Margin="10,0,10,0"
                Height="60">

            <TextBox Name="FCsTb" 
                     Text="ФИО" 
                     Foreground="#77FFFFFF"
                     Style="{StaticResource SemiTransparentTextBoxStyle}"/>
        </Border>

        <!-- Поле ввода Почты -->
        <Border Grid.Row="5" Grid.Column="1"
                CornerRadius="10"
                Background="#33FFFFFF"
                BorderBrush="#66FFFFFF" BorderThickness="2"
                Margin="10,0,10,0"
                Height="60">

            <TextBox Name="EmailTb"
                     Text="Почта"
                     Foreground="#77FFFFFF"
                     Style="{StaticResource SemiTransparentTextBoxStyle}"/>
        </Border>

        <!-- Поле ввода Телефона -->
        <Border Grid.Row="7" Grid.Column="1"
                CornerRadius="10"
                Background="#33FFFFFF"
                BorderBrush="#66FFFFFF"
                BorderThickness="2"
                Margin="10,0,10,0"
                Height="60">

            <TextBox Name="PhoneTb"
                     Text="Телефон"   
                     Foreground="#77FFFFFF"
                     Style="{StaticResource SemiTransparentTextBoxStyle}"/>
        </Border>

        <!-- Кнопка Регистрации -->
        <Button Name="RegBtn" Grid.Column="1" Grid.Row="9"
                BorderThickness="0"
                Content="Зарегистрироваться"
                Width="360" Height="60"
                Style="{StaticResource WhiteOrangeButtonStyle}"/>

        <!-- Кнопка Войти -->
        <Button x:Name="SignUpBtn" Click="SignUpBtn_Click"
                Grid.Row="10" Grid.Column="1"
                Content="Войти"
                Style="{StaticResource BaseButtonStyle}"/>

    </Grid>
</Page>
