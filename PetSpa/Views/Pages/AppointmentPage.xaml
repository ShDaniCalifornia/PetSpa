<Page x:Class="PetSpa.Views.Pages.AppointmentPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PetSpa.Views.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="1080"
      Title="AppointmentPage">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="20"/>
            <ColumnDefinition Width="346"/>
            <ColumnDefinition Width="346"/>
            <ColumnDefinition Width="346"/>
            <ColumnDefinition Width="20"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="55"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="10"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>

        <!-- Поле поиска -->
        <Border Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="2"
                CornerRadius="20"
                Background="#FAE9DF"
                BorderBrush="#66FFFFFF"
                BorderThickness="2"
                Margin="200,0,0,0"
                Height="40">

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="40"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Image Grid.Column="0"
                       Source="/Resources/Icons/SearchIcon2.png"
                       Width="24"
                       Height="24"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center"/>

                <TextBox Grid.Column="1"
                         Name="SearchTextBox"
                         Text="Поиск"
                         Foreground="Gray"
                         Style="{StaticResource SearchTextBoxStyle}"
                         GotFocus="SearchTextBox_GotFocus"
                         LostFocus="SearchTextBox_LostFocus"
                         TextChanged="SearchTextBox_TextChanged"/>
            </Grid>
        </Border>

        <!-- Кнопка добавить клиента -->
        <Button Name="AddAppointmenttBtn" Click="AddAppointmenttBtn_Click"
                Grid.Row="1" Grid.Column="3" 
                Style="{StaticResource OrangeWhiteButtonStyle}"
                Content="Добавить запись" FontSize="15"
                Width="200" Height="40"/>

        <!-- Список записей -->
        <ScrollViewer Grid.Row="3" Grid.Column="1" Grid.ColumnSpan="3"
                      VerticalScrollBarVisibility="Hidden"
                      HorizontalScrollBarVisibility="Disabled">
            <ItemsControl Name="AppointmentsItemsControl"
                          Background="Transparent">

                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel Orientation="Vertical"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>

                <ItemsControl.GroupStyle>
                    <GroupStyle>
                        <GroupStyle.HeaderTemplate>
                            <DataTemplate>
                                <!-- Заголовок группы (Сегодня/Вчера/Дата) -->
                                <Border Background="#DF6C2D"
                                        CornerRadius="15"
                                        Margin="0,10,0,5"
                                        Padding="15,8"
                                        HorizontalAlignment="Stretch">
                                    <TextBlock Text="{Binding Name}"
                                               Foreground="White"
                                               FontSize="18"
                                               FontWeight="Bold"/>
                                </Border>
                            </DataTemplate>
                        </GroupStyle.HeaderTemplate>
                    </GroupStyle>
                </ItemsControl.GroupStyle>

                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <!-- Карточка записи -->
                        <Border Background="#FAE9DF" 
                                Margin="10,8,10,8" 
                                Padding="25,0"
                                CornerRadius="25"
                                Width="1000"
                                Height="100">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <!-- Время -->
                                    <ColumnDefinition Width="50"/>
                                    <!-- Разделитель -->
                                    <ColumnDefinition Width="20"/>
                                    <!-- ФИО клиента и питомец -->
                                    <ColumnDefinition Width="280"/>
                                    <!-- Разделитель -->
                                    <ColumnDefinition Width="20"/>
                                    <!-- Услуга и цена -->
                                    <ColumnDefinition Width="250"/>
                                    <!-- Разделитель -->
                                    <ColumnDefinition Width="20"/>
                                    <!-- Мастер -->
                                    <ColumnDefinition Width="180"/>
                                    <!-- Разделитель -->
                                    <ColumnDefinition Width="20"/>
                                    <!-- Кнопки -->
                                    <ColumnDefinition Width="180"/>
                                </Grid.ColumnDefinitions>

                                <!-- Отступ -->
                                <Grid Grid.Column="1" Background="White"
                                      Margin="10 0 5 0"/>
                                
                                <!-- Время (крупное) -->
                                <StackPanel Grid.Column="0" 
                                            VerticalAlignment="Center"
                                            HorizontalAlignment="Center">
                                    <TextBlock Text="{Binding FormattedTime}"
                                               FontSize="20"
                                               FontWeight="Bold"
                                               Foreground="#DF6C2D"
                                               HorizontalAlignment="Center"/>
                                </StackPanel>

                                <!-- ФИО клиента и питомец -->
                                <StackPanel Grid.Column="2" 
                                            VerticalAlignment="Center"
                                            Margin="15,0">
                                    <TextBlock Text="{Binding ClientFullName}"
                                               FontSize="18"
                                               FontWeight="Bold"
                                               Foreground="#DF6C2D"
                                               TextWrapping="Wrap"/>
                                    <TextBlock Text="{Binding PetInfo}"
                                               FontSize="16"
                                               Foreground="#DF6C2D"
                                               Margin="0,5,0,0"
                                               TextWrapping="Wrap"/>
                                </StackPanel>

                                <!-- Отступ -->
                                <Grid Grid.Column="3" Background="White"
                                      Margin="10 0 5 0"/>

                                <!-- Услуга и цена -->
                                <StackPanel Grid.Column="4" 
                                            VerticalAlignment="Center"
                                            Margin="15,0">
                                    <TextBlock Text="{Binding ServiceName}"
                                               FontSize="18"
                                               FontWeight="Bold"
                                               Foreground="#DF6C2D"
                                               TextWrapping="Wrap"/>
                                    <StackPanel Orientation="Horizontal"
                                                Margin="0,8,0,0">
                                        <Border Background="#FFE4D1" 
                                                CornerRadius="10" 
                                                Padding="10,6">
                                            <TextBlock Text="{Binding FormattedPrice}"
                                                       FontSize="16"
                                                       FontWeight="Bold"
                                                       Foreground="#DF6C2D"/>
                                        </Border>
                                        <TextBlock Text="₽"
                                                   FontSize="16"
                                                   FontWeight="Bold"
                                                   Foreground="#DF6C2D"
                                                   VerticalAlignment="Center"
                                                   Margin="5,0,0,0"/>
                                    </StackPanel>
                                </StackPanel>

                                <!-- Отступ -->
                                <Grid Grid.Column="5" Background="White"
                                      Margin="10 0 5 0"/>

                                <!-- Мастер -->
                                <StackPanel Grid.Column="6" 
                                            VerticalAlignment="Center"
                                            Margin="15,0">
                                    <TextBlock Text="Мастер:"
                                               FontSize="14"
                                               Foreground="#DF6C2D"
                                               Opacity="0.8"/>
                                    <TextBlock Text="{Binding MasterFullName}"
                                               FontSize="18"
                                               FontWeight="Bold"
                                               Foreground="#DF6C2D"
                                               TextWrapping="Wrap"
                                               Margin="0,5,0,0"/>
                                </StackPanel>

                                <!-- Отступ -->
                                <Grid Grid.Column="7" Background="White"
                                      Margin="10 0 5 0"/>

                                <!-- Кнопки редактировать и удалить -->
                                <StackPanel Grid.Column="8" 
                                            Orientation="Vertical" 
                                            VerticalAlignment="Center"
                                            HorizontalAlignment="Center">
                                    <!-- Кнопка редактировать -->
                                    <Button Name="EditBtn" 
                                            Style="{StaticResource TransparentButtonStyle}"
                                            Tag="{Binding}"
                                            Click="EditBtn_Click"
                                            Margin="0,10,50,15"
                                            ToolTip="Редактировать запись">
                                        <StackPanel Orientation="Horizontal">
                                            <Image Source="/Resources/Icons/EditIcon.png"
                                                   Stretch="Fill" Width="30" Height="30"/>
                                        </StackPanel>
                                    </Button>

                                    <!-- Кнопка удалить -->
                                    <Button Name="DeleteBtn" 
                                            Style="{StaticResource TransparentButtonStyle}"
                                            Tag="{Binding}"
                                            Click="DeleteBtn_Click"
                                            Margin="0,0,50,15"
                                            ToolTip="Удалить запись">
                                        <StackPanel Orientation="Horizontal">
                                            <Image Source="/Resources/Icons/TrashIcon.png"
                                                   Stretch="Fill" Width="30" Height="35"/>
                                        </StackPanel>
                                    </Button>
                                </StackPanel>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
    </Grid>
</Page>
